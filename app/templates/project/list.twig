{% extends "base-content.twig" %}

{% block title %}{{ 'titulekProjekty'|trans }}{% endblock %}
{% block content %}
  <div class="container-fluid">
    <div class="row no-gutter projects-list">
      {% for project   in projects %}
        {% if not project.isNull %}
          <div class="col-xs-4 col-sm-3">
            <a href="{{ path_for('projectDetail', {'lang': lang, 'rewrite': project.getRewrite() }) }}">
              <img src="{{ project.getMainImagePublicSourceName() }}?v={{ resources_version }}"
                   alt="Projekt {{ project.getName() }}" class="img-responsive project-list-image">
              <div class="project-list-overlay"></div>
              <div class="project-list-text">
                <span class="project-list-text-name">{{ project.getName()|upper }}</span>
                <br>
                <span class="project-list-text-typology">{{ project.getTypology() }}</span>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock %}

